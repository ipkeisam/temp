#$ActionResumeRetryCount -1    # infinite retries if host is down
# remote host is: name/ip:port, e.g. 192.168.0.1:514, port optional
#*.* @@remote-host:514
*.info;mail.none;cron.none;auth.none;authpriv.none;authpriv.info;auth.notice @uxlogsrv1.capgroup.com
*.info;mail.none;cron.none;auth.none;authpriv.none;authpriv.info;auth.notice @uxlogsrv2.capgroup.com
